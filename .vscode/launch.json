    "version": "0.2.0",
    "configurations": [
        {
            "name": "c++ debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${relativeFile}.executable",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ninja build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "c++ debug compress",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/compress.cpp.executable",
            "args": [
                // "--block",
                // "harry_comp.txt",
                // "harryard.txt",
                "data/check0.txt",
                "check0_comp.txt"
                // "check0_comp.txt",
                // "check0_decomp.txt"
                // "data/harry.txt",
                // "harry_comp.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ninja build compress",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}